<h1><strong><%= @list.name %></strong></h1>

<div class="container">
	<%= form_tag do %>
		<% @list.items.each do |item| %>
				<%= link_to check_box_tag(item), item, method: :put %>
				<%= label_tag(item, "#{item.name}: #{item.quantity}", class: item.state) %>
			<%= link_to "Delete Item", item, method: :delete, data: {confirm: "Are you sure?" } %>
			<br>
		<% end %>
	<% end %>
</div>


<br>
<br>
<%= link_to "Add new item", new_item_path %> |
<%= link_to "Back", lists_path %> |
<%= link_to "Delete List", list_path, method: :delete,  data: {confirm: "Are you sure?" } %>